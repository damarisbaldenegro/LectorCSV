<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.csvlector.MainActivity">

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/EditTextNom"
        android:background="#cce3fb"
        android:inputType="text"
        android:layout_below="@+id/textNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/EditTextCod"
        android:background="#cce3fb"
        android:digits="1234567890"
        android:longClickable="true"
        android:inputType="phone"
        android:layout_above="@+id/buttonGuardar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Guardar"
        android:id="@+id/buttonGuardar"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/EditTextCod"
        android:layout_alignEnd="@+id/EditTextCod" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Nombre"
        android:id="@+id/textNombre"
        android:textSize="25dp"
        android:textColor="#0d0d0d"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Ver"
        android:id="@+id/buttonVer"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonGuardar"
        android:layout_toStartOf="@+id/buttonGuardar" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/EditextAP"
        android:layout_below="@+id/EditTextNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/EditTextNom"
        android:layout_alignEnd="@+id/EditTextNom"
        android:background="#cce3fb" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Apellido Paterno"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:textColor="#0d0d0d"
        android:layout_below="@+id/EditTextNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/EditextAP"
        android:layout_alignEnd="@+id/EditextAP" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="CÃ³digo"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="#0d0d0d"
        android:layout_above="@+id/EditTextCod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textNombre"
        android:layout_alignEnd="@+id/textNombre" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/EditextAM"
        android:background="#cce3fb"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Apellido Materno"
        android:id="@+id/textView3"
        android:textSize="25dp"
        android:textColor="#0d0d0d"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/EditextAM"
        android:layout_alignEnd="@+id/EditextAM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_above="@+id/buttonGuardar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/EditextAP" />

</RelativeLayout>
